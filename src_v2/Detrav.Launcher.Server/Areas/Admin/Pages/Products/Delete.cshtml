@page "{id}"
@model Detrav.Launcher.Server.Areas.Admin.Pages.Products.DeleteModel
@{
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-page="/Index">Home</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-page="/Index">Admin area</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-page="/Products/List">Products</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-page="/Products/Delete" asp-route-id="@Model.Product?.Id">Delete - @Model.Product?.Name</a></li>
    </ol>
</nav>

@if (@Model.Product != null)
{
    <h1 class="display-4">
        @Model.Product.Name
    </h1>
    <h2 class="text-center">
        Are you sure you want to delete?<br />
        This action cannot be undone!
    </h2>
    <p>
        <form method="post">
            <button class="btn btn-danger w-100" type="submit">Delete</button>
        </form>
    </p>
}